{
  "name": "tyme-backend",
  "version": "1.0.0",
  "description": "Backend API service for tyme - Time Tracking & Invoicing System",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.ts",
    "dev": "sh ./scripts/dev-watch.sh",
    "build": "tsc",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test DOCKER_ENV=true jest --ci --coverage --reporters=default --reporters=jest-junit --forceExit",
    "test:docker": "docker compose --profile test run --rm backend-tests",
    "test:docker:coverage": "docker compose --profile test run --rm backend-tests-coverage",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "pretest": "echo 'Ensure tyme-test-db container is running: docker compose up -d tyme-test-db'"
  },
  "keywords": [
    "tyme",
    "time-tracking",
    "invoicing",
    "zugferd",
    "freelance",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^26.4.4",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@oevortex/ddg_search": "^1.1.3",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.3",
    "@types/pdfmake": "^0.2.12",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "factur-x": "^0.0.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsdom": "^27.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "moment-timezone": "^0.6.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "openai": "^6.8.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "pdfmake": "^0.2.20",
    "pg": "^8.16.3",
    "redis": "^5.9.0",
